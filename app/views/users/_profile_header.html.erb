<div class="container d-flex justify-content-center align-items-center gap-5" style="min-height: 20rem;">
    <% if user.profile_pic.attached? %>
        <%= image_tag user.profile_pic, class: "img-thumbnail rounded-circle w-25", style: "max-width: 11rem; max-height: 11rem;" %>
    <% else %>
        <%= image_tag 'default_avatar.png', class: "img-thumbnail rounded-circle w-25", style: "max-width: 11rem; max-height: 11rem;" %>
    <% end %>

    <div class="w-35 d-flex flex-column gap-4">
        <div class="d-flex gap-3 align-items-center">
            <p class="m-0 fw-bold"><%= user.username %></p>
            <%= render "layouts/shared/follow_state", user: user %>
        </div>

        <div class="d-flex gap-5">
            <small class="fw-bold"><%= pluralize(user.twits.count, "twit")%></small>
            <small class="fw-bold"><%= pluralize(user.followers.count, "followers")%></small>
            <small class="fw-bold"><%= pluralize(user.followings.count, "following")%></small>
        </div>

        <div class="d-flex flex-column">
            <small><%= user.bio %></small>
        </div>
    </div>
</div>
<div class="d-flex justify-content-center align-items-center">
    <hr class="-center" style="width: 50%;">
</div>