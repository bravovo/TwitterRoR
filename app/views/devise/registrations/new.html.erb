<div class = "container home-sections d-flex flex-row justify-content-center align-items-center">
    <div class = "login-section">
        <div>
            <h1 class="h1-text">Реєстрація</h1>
        </div>
        <div class="card-body text-center">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <div class="mb-3 mt-4">
              <%= f.email_field :email, class: "form-control", placeholder: "Email" %>
            </div>
            <div class="mb-3 mt-4">
              <%= f.text_field :username, class: "form-control", placeholder: "Нікнейм" %>
            </div>
            <div class="mb-3">
              <%= f.password_field :password, class: "form-control", placeholder: "Пароль" %>
            </div>
            <div class="mb-3">
            <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Підтвердження паролю" %>
            </div>
            <%= f.submit "Увійти", class: "btn btn-primary d-block" %>
          <% end %>
      
          <% if notice %>
              <p class="notice"><%= notice %></p>
          <% elsif alert %>
              <p class="alert"><%= alert %></p>
          <% end %>
        </div>

        <div class="card text-center">
            <div class="card-text">
                Вже маєте акаунт?
                <%= link_to "Увійти", new_user_session_path, class: "fs-6 d-block my-4 text-decoration-none" %>
            </div>
        </div>
    </div>
</div>


